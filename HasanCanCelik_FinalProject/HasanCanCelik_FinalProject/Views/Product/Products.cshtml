
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@using EntityLayer.Entities
@model List<Product>



<a class="btn btn-primary" href="/Product/AddProduct">Ürün Ekle</a> 
<div class="row">
  @foreach(var item in Model){
  <div class="col-sm-4">
    <div class="card text-center">
      <div class="card-header">
          <h5 class="card-title">@item.ProductName</h5>
        </div>
      <div class="card-body">
        <p class="card-text"> Ürün Fiyatı: @item.Price ~ Stok Miktarı: @item.Stock</p>
      </div>
      <div class="card-footer">
             <td> @if (item.IsPublish)
                  {
                      <a class="btn btn-success" asp-route-id="@item.ProductID" asp-action="Publish">Yayınlandı</a>
                  }else{
                      <a class="btn btn-light" asp-route-id="@item.ProductID" asp-action="Publish">Yayınla</a>
                  }

             </td>
             <td><a class="btn btn-primary" href="/Product/UpdateProduct/@item.ProductID">Güncelle</a> </td>
             <a class="btn btn-danger" asp-route-id="@item.ProductID" asp-action="Delete">Sil</a>
        </div>
    </div>
    <br>
  </div>
  }
</div>

